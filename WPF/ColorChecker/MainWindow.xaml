<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>
            <Label Content="" Target="{Binding ElementName=checkBox,Mode=OneWay}" Grid.RowSpan="6" Margin="21,27,27,34" RenderTransformOrigin="0.462,0.448" Background="LightGray"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="1" Grid.Row="1" Text="R" FontSize="22"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="1" Grid.Row="2" Text="G" FontSize="22"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="1" Grid.Row="3" Text="B" FontSize="22"/>
            <Slider x:Name="SampleSlider1" VerticalAlignment="Center"  Grid.Column="2" Grid.Row="1" Maximum="256"/>
            <Slider x:Name="SampleSlider2" VerticalAlignment="Center"  Grid.Column="2" Grid.Row="2" Maximum="256"/>
            <Slider x:Name="SampleSlider3" VerticalAlignment="Center"  Grid.Column="2" Grid.Row="3" Maximum="256"/>
            <TextBox HorizontalAlignment="Left" Width="40" Height="20" Grid.Column="3" Grid.Row="1" Text="{Binding ElementName=SampleSlider1,Path=Value,UpdateSourceTrigger=PropertyChanged}" />
            <TextBox HorizontalAlignment="Left" Width="40" Height="20" Grid.Column="3" Grid.Row="2" Text="{Binding ElementName=SampleSlider2,Path=Value,UpdateSourceTrigger=PropertyChanged}" />
            <TextBox HorizontalAlignment="Left" Width="40" Height="20" Grid.Column="3" Grid.Row="3" Text="{Binding ElementName=SampleSlider3,Path=Value,UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </StackPanel>
</Window>
